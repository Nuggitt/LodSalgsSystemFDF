@page
@model LodSalgsSystemFDF.Pages.Admin.CreateUserModel
@{
}
<div class="content-container">
    <style>
        .form-contrainer {
            margin-top: 100px;
        }

        .center-container {
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>

    <div class="form-contrainer center-container">
        <div class="col-md-4">
            <h1>
                Opret Ny Bruger
            </h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="@Model.BrugerNavn" class="control-lable"></label>
                    <input asp-for="@Model.BrugerNavn" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password" class="control-lable"></label>
                    <input asp-for="@Model.Password" class="form-control" />

                </div>

                <div class="form-group">
                    <input type="submit" value="Opret" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="center-container">
        <a asp-page="/Index">Tilbage til Startsiden</a>
    </div>
    <div class="text-center form-contrainer">
        <div class="center">
            @Model.Message
        </div>
    </div>
</div>