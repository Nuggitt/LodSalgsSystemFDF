@{
    ViewData["Title"] = "Delete";
}
<div class="content-container">
<h1 style="margin-top:80px"> </h1>
<h1>Slet en børnegruppe</h1>

<h3 style ="color:red">Er du sikker på at du vil slette denne børnegruppe?</h3>
<div>
    <h4>Børnegruppe</h4>
    <hr />
    <form method="post">
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Bornegrupper.Bornegruppe_ID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Bornegrupper.Bornegruppe_ID)

            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Bornegrupper.Gruppenavn)
            </dt>
