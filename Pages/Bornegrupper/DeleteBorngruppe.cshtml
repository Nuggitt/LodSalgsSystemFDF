                @Html.DisplayFor(model => model.Bornegrupper.Gruppenavn)
            </dd>
        </dl>
        <input type="hidden" asp-for="Bornegrupper.Bornegruppe_ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
