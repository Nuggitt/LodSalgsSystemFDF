@page "{bid:int}"
@model LodSalgsSystemFDF.Pages.Borns.BornIBornegrupperModel
@{
}

<div class="content-container">
    <div class="container-fluid" style="margin-top:80px">
        <h1>Liste over alle Børn</h1>
        <div class="mb-3">
            <a asp-page="/Borns/Create" class="btn btn-primary">
                <i class="fa fa-plus"></i> Tilføj Nyt Barn
            </a>
        </div>
        <form method="post" class="form-inline">
            <div class="input-group mb-3">
                <input asp-for="NameSearch" class="form-control mr-1" placeholder="Søg efter navn" />
                <input type="submit" asp-page-handler="BornByName" value="Søg" class="btn btn-primary" />
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-stacked">
                <thead>
                    <tr>
                        <th>
                            ID
                            <a data-bs-toggle="tooltip" title="Sorter ID faldende" asp-page-handler="IDDescending"><i class="fa fa-angle-down"></i></a>
                            <a data-bs-toggle="tooltip" title="Sorter ID stigende" asp-page-handler="IDAscending"><i class="fa fa-angle-up"></i></a>
                        </th>
                        <th>
                            Navn
                            <a data-bs-toggle="tooltip" title="Sorter navn faldende" asp-page-handler="NavnDescending"><i class="fa fa-angle-down"></i></a>
                            <a data-bs-toggle="tooltip" title="Sorter navn stigende" asp-page-handler="NavnAscending"><i class="fa fa-angle-up"></i></a>
                        </th>
                        <th>Adresse</th>
                        <th>Telefon</th>
                        <th>
                            Tildelte Lodsedler
                            <a data-bs-toggle="tooltip" title="Sorter antal givet lodsedler faldende" asp-page-handler="GivetLodsedlerDescending"><i class="fa fa-angle-down"></i></a>
                            <a data-bs-toggle="tooltip" title="Sorter antal givet lodsedler stigende" asp-page-handler="GivetLodsedlerAscending"><i class="fa fa-angle-up"></i></a>
                        </th>
                        <th>
                            Solgte Lodseddeler
                            <a data-bs-toggle="tooltip" title="Sorter lodsedler faldende" asp-page-handler="AntalSolgteLodseddelerDescending"><i class="fa fa-angle-down"></i></a>
                            <a data-bs-toggle="tooltip" title="Sorter lodsedler stigende" asp-page-handler="AntalSolgteLodseddelerAscending"><i class="fa fa-angle-up"></i></a>
                        </th>
                        <th>
                            Børnegruppe ID
                            <a data-bs-toggle="tooltip" title="Sorter gruppe_ID faldende" asp-page-handler="GruppeIDDescending"><i class="fa fa-angle-down"></i></a>
                            <a data-bs-toggle="tooltip" title="Sorter gruppe_ID stigende" asp-page-handler="GruppeIDAscending"><i class="fa fa-angle-up"></i></a>
                        </th>
                        <th>Slet Barn</th>
                        <th>Redigér Barn</th>
                        <th>Tildel Lodsedler</th>
                        <th>Opret Salg</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model.Borns)
                        {
                            <tr>
                                <td data-label="ID">@item.Born_ID</td>
                                <td data-label="Navn">@item.Navn</td>
                                <td data-label="Adresse">@item.Adresse</td>
                                <td data-label="Telefon">@item.Telefon</td>
                                <td data-label="Tildelte Lodsedler">@item.GivetLodsedler</td>
                                <td data-label="Solgte Lodseddeler">@item.AntalSolgteLodseddeler</td>
                                <td data-label="Børnegruppe ID">@item.Bornegruppe_ID</td>

                                <td data-label="Slet Barn">
                                    <p>
                                        <a asp-page="/Borns/Delete" asp-route-id="@item.Born_ID">
                                            <i class="fa fa-trash" aria-hidden="true"></i> Slet
                                        </a>
                                    </p>
                                </td>
                                <td data-label="Redigér Barn">
                                    <p>
                                        <a asp-page="/Borns/Update" asp-route-id="@item.Born_ID">
                                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Redigér
                                        </a>
                                    </p>
                                </td>
                                <td data-label="Tildel Lodsedler">
                                    <a asp-page="TildelLodsedlerBorneIBornegruppe" asp-route-id="@item.Born_ID" asp-route-bid="@item.Bornegruppe_ID">
                                        <i class="fa fa-plus-square-o" aria-hidden="true"></i>
                                    </a>
                                </td>
                                <td data-label="Opret Salg">
                                    <a asp-page="/Salgs/Create" asp-route-id="@item.Born_ID" asp-route-bid="@item.Bornegruppe_ID">
                                        <i class="fa fa-plus-square-o" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
