@page
@model LodSalgsSystemFDF.Pages.Borns.DeleteModel
@{
    ViewData["Title"] = "Delete";
}
<div class="content-container">
    <h1 style="margin-top:80px">
        <h1>Slet et Barn</h1>

        <h3 style="color:red">Er du sikker på at du vil slette dette barn?</h3>
        <div>
            <h4>Børn</h4>
            <hr />
            <form method="post">
                <dl class="row">

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Born.Born_ID)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Born.Born_ID)

                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Born.Navn)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Born.Navn)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Born.Adresse)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Born.Adresse)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Born.Telefon)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Born.Telefon)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Born.GivetLodsedler)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Born.GivetLodsedler)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Born.AntalSolgteLodseddeler)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Born.AntalSolgteLodseddeler)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Born.Bornegruppe_ID)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Born.Bornegruppe_ID)
                    </dd>
                </dl>


                <input type="hidden" asp-for="Born.Born_ID" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-page="/Borns/Getborn">Klik Her for at vende tilbage til liste af børn</a>
            </form>
        </div>
</div>