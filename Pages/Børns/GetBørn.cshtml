@page
@model LodSalgsSystemFDF.Pages.Børns.GetBørnModel
@{
    ViewData["Title"] = "GetBørn";
}


<h1>Liste over alle Børn</h1>
<p>
    <a asp-page="/Børns/Create">Opret nyt Barn</a>
</p>

<h4 style="color:red"> Listen over alle Børn</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                Børn_ID
            </th>
            <th>
                Navn <a data-toggle="tooltip" title="Sort By Name Descending" asp-page-handler="Descending"><i class="fa fa-angle-down"></i></a>
            </th>
            <th>
                Adresse
            </th>
            <th>
                Telefon
            </th>
            <th>
                AntalSolgteLodseddeler 
            </th>
            <th>
                Børnegruppe_ID
            </th>
            <th>
                Slet Barn
            </th>
            <th>
                Ret Barn
            </th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            @foreach (var item in Model.Børns)
            {
                <tr>
                    <td>
                        @item.Børn_ID
                    </td>
                    <td>
                        @item.Navn
                    </td>
                    <td>
                        @item.Adresse
                    </td>
                    <td>
                        @item.Telefon
                    </td>
                    <td>
                        @item.AntalSolgteLodseddeler
                    </td>
                    <td>
                        @item.Børnegruppe_ID
                    </td>
                    <td>
                        <p>
                            <a asp-page="/Børns/Delete" asp-route-id="@item.Børn_ID"> Slet dette barn  </a>
                        </p>
                    </td>
                    <td>
                        <p>
                            <a asp-page="/Børns/Update" asp-route-id="@item.Børn_ID"> Ret dette barn  </a>
                        </p>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>