        <div class="form-group">
            <label asp-for="@Model.Børn.Navn" class="control-label"></label>
            <input asp-for="@Model.Børn.Navn" class="form-control" />
            <span asp-validation-for="@Model.Børn.Navn" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Børn.Adresse" class="control-label"></label>
            <input asp-for="@Model.Børn.Adresse" class="form-control" />
            <span asp-validation-for="@Model.Børn.Adresse" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Børn.Telefon" class="control-label"></label>
