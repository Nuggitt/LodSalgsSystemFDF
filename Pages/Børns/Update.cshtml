            <input asp-for="@Model.Børn.Børnegruppe_ID" class="form-control" />
            <span asp-validation-for="@Model.Børn.Børnegruppe_ID" class="text-danger"></span>
        </div>



        <input type="hidden" asp-for="Børn.Børn_ID" />
        <input type="submit" value="Update" class="btn btn-danger" />
        <a asp-page="/Børn/Getbørn">Tilbage til listen af børn</a>
