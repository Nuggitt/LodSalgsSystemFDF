@page
@model LodSalgsSystemFDF.Pages.Indtægter.GetIndtægterModel
@{
    ViewData["Title"] = "GetIndtæger";
}

<div class="content-container">
    <div class="container-fluid" style="margin-top:80px">
        <h1 style="margin-top:80px"></h1>
        <h1>Liste over alle indtægter</h1>

        <!-- Opret-knap vises altid -->
        <div class="mb-3">
            <a asp-page="/Indtægter/Create" class="btn btn-primary">
                <i class="fa fa-plus" aria-hidden="true"></i> Tilføj ny indtægt
            </a>
        </div>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th style="column-width:800px">
                        Indtægt_ID
                        <a data-toggle="tooltip" title="Sorter ID faldende" asp-page-handler="IndtægtIDDESC"><i class="fa fa-angle-down"></i></a>
                        <a data-toggle="tooltip" title="Sorter ID stigende" asp-page-handler="IndtægtIDASC"><i class="fa fa-angle-up"></i></a>
                    </th>
                    <th>Salg ID</th>
                    <th>Dato</th>
                    <th>Børn ID</th>
                    <th>Børnegruppe ID</th>
                    <th>Gruppenavn</th>
                    <th>Navn</th>
                    <th>Adresse</th>
                    <th>Telefon</th>
                    <th style="column-width:800px">
                        Antal Solgte Lodsedler
                        <a data-toggle="tooltip" title="Sorter faldende" asp-page-handler="AntalSolgteLodseddelerDESC"><i class="fa fa-angle-down"></i></a>
                        <a data-toggle="tooltip" title="Sorter stigende" asp-page-handler="AntalSolgteLodseddelerASC"><i class="fa fa-angle-up"></i></a>
                    </th>
                    <th style="column-width:800px">
                        Solgte Lodsedler for gruppen
                        <a data-toggle="tooltip" title="Sorter faldende" asp-page-handler="AntalSolgteLodseddlerForGruppenDESC"><i class="fa fa-angle-down"></i></a>
                        <a data-toggle="tooltip" title="Sorter stigende" asp-page-handler="AntalSolgteLodseddlerForGruppenASC"><i class="fa fa-angle-up"></i></a>
                    </th>
                    <th>Slet indtægt</th>
                    <th>Ret indtægt</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Indtægter != null)
                {
                    foreach (var item in Model.Indtægter)
                    {
                        <tr>
                            <td>@item.Indtægt_ID</td>
                            <td>@item.Salg_ID</td>
                            <td>@item.Salg.Dato</td>
                            <td>@item.Børn.Børn_ID</td>
                            <td>@item.Børnegruppe.Børnegruppe_ID</td>
                            <td>@item.Børnegruppe.Gruppenavn</td>
                            <td>@item.Børn.Navn</td>
                            <td>@item.Børn.Adresse</td>
                            <td>@item.Børn.Telefon</td>
                            <td>@item.Børn.AntalSolgteLodseddeler</td>
                            <td>@item.Børnegruppe.AntalSolgteLodseddelerPrGruppe</td>
                            <td>
                                <a asp-page="/Indtægter/Delete" asp-route-id="@item.Indtægt_ID">
                                    <i class="fa fa-trash" aria-hidden="true"></i> Slet
                                </a>
                            </td>
                            <td>
                                <a asp-page="/Indtægter/Update" asp-route-id="@item.Indtægt_ID">
                                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Redigér
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
