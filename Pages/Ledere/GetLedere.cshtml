@page
@model LodSalgsSystemFDF.Pages.Ledere.GetLedereModel
@{
    ViewData["Title"] = "GetLedere";
}



<div class="content-container">
    <div class="container-fluid" style="margin-top:80px">
        <h1 style="margin-top:80px">
            <h1>Liste over ledere</h1>
            <p>
                <div class="mb-3">
                    <a asp-page="/Ledere/CreateLeder" class="btn btn-primary">
                        <i class="fa fa-plus" aria-hidden="true"></i> Tilføj ny leder
                    </a>
                </div>
            </p>
            <form method="post" class="form-inline">
                <div class="input-group mb-3">
                    <input asp-for="LederSearch" class="form-control mr-1" placeholder="Søg efter leder" />
                    <input type="submit" asp-page-handler="LederByname" value="Søg" class="btn btn-primary" />
                </div>
            </form>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-stacked">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>
                                Leder navn
                                <a data-toggle="tooltip" title="Sorter navn faldende" asp-page-handler="LederNavnDescending">
                                    <i class="fa fa-angle-down"></i>
                                </a>
                                <a data-toggle="tooltip" title="Sorter navn stigende" asp-page-handler="LederNavnAscending">
                                    <i class="fa fa-angle-up"></i>
                                </a>
                            </th>
                            <th>Adresse</th>
                            <th>Telefon</th>
                            <th>Email</th>
                            <th>Børnegruppe ID</th>
                            <th>Slet Leder</th>
                            <th>Redigér Leder</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model.Ledere)
                            {
                                <tr>
                                    <td data-label="ID">@item.Leder_ID</td>
                                    <td data-label="Leder navn">@item.Navn</td>
                                    <td data-label="Adresse">@item.Adresse</td>
                                    <td data-label="Telefon">@item.Telefon</td>
                                    <td data-label="Email">@item.Email</td>
                                    <td data-label="Børnegruppe ID">@item.Bornegruppe_ID</td>

                                    <td data-label="Slet Leder">
                                        <a asp-page="/Ledere/DeleteLeder" asp-route-Leder_ID="@item.Leder_ID">
                                            <i class="fa fa-trash" aria-hidden="true"></i> Slet
                                        </a>
                                    </td>

                                    <td data-label="Redigér Leder">
                                        <a asp-page="/Ledere/UpdateLeder" asp-route-Leder_ID="@item.Leder_ID">
                                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Redigér
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    
</div>
