@page
@model LodSalgsSystemFDF.Pages.LogIn.LogInPageModel
@{
}

<style>

    body {
        height: 100vh;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-contrainer {
        margin-top: 100px;
    }

    .center-container {
        display: flex;
        align-items: center;
        justify-content: center;
    }
 
</style>

<div class="form-contrainer">
    <div class="form-contrainer">
        @Model.Message
    </div>
    <form method="post">
        <div class="form-group">
            <label asp-for="BrugerNavn" class="col-form-label "></label>
            <div>
                <input asp-for="BrugerNavn" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-form-label"></label>
            <div>
                <input asp-for="Password" />
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-outline-dark">Log in</button>
        </div>
    </form>
</div>
