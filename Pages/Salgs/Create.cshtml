@page
@model LodSalgsSystemFDF.Pages.Salgs.CreateModel
@{
    ViewData["Title"] = "Create";
}
<div class="content-container">
    <h1 style="margin-top:80px">
        <h1>Opret Salg</h1>
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="  ModelOnly  " class="text-danger">
                    </div>

                    @* <div class="form-group">
                    <label asp-for="@Model.Salg.Salg_ID" class="control-label"></label>
                    <input asp-for="@Model.Salg.Salg_ID" class="form-control" />
                    <span asp-validation-for="@Model.Salg.Salg_ID" class="text-danger"></span>
                    </div> *@

                    <div class="form-group">
                        <label asp-for="@Model.Salg.Børn_ID" class="control-label"></label>
                        <input asp-for="@Model.Id" class="form-control" />
                        <span asp-validation-for="@Model.Id" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Salg.Børnegruppe_ID" class="control-label"></label>
                        <input asp-for="@Model.Bid" class="form-control" />
                        <span asp-validation-for="@Model.Bid" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Salg.Leder.Navn" class="control-label"></label>
                        <select asp-for="@Model.Salg.Leder_ID" asp-items="@(new SelectList(Model.LederOptions, "Leder_ID", "Navn"))" class="form-control">
                            <option value="">Vælg Leder</option>
                        </select>
                        <span asp-validation-for="@Model.Salg.Leder_ID" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Salg.Dato" class="control-label"></label>
                        <input asp-for="@Model.Salg.Dato" class="form-control" />
                        <span asp-validation-for="@Model.Salg.Dato" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Salg.AntalLodseddelerRetur" class="control-label"></label>
                        <input asp-for="@Model.Salg.AntalLodseddelerRetur" class="form-control" />
                        <span asp-validation-for="@Model.Salg.AntalLodseddelerRetur" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Salg.AntalSolgteLodseddelerPrSalg" class="control-label"></label>
                        <input asp-for="@Model.Salg.AntalSolgteLodseddelerPrSalg" class="form-control" />
                        <span asp-validation-for="@Model.Salg.AntalSolgteLodseddelerPrSalg" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Salg.Pris" class="control-label"></label>
                        <input asp-for="@Model.Salg.Pris" class="form-control" />
                        <span asp-validation-for="@Model.Salg.Pris" class="text-danger"></span>
                    </div>

                    <input type="hidden" name="Id" value="@Model.Id" />
                    <input type="hidden" name="Bid" value="@Model.Bid"/>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                    

                </form>
                <div class="center-container">
                    <a asp-page="/Salgs/GetSalgs">Tilbage til Salg</a>
                </div>
            </div>
        </div>
</div>